var y = 30;
var x = 77.5;
//the exciting part
for (var i = 0; i < app.length; i++) {
    fill(app[i].fill);
    strokeWeight(2);
    stroke(app[i].outline);
    rect(x, y, 50, 50, 15);
    
    app[i].cover();
    
    fill(255);
    textSize(13);
    textAlign(CENTER, BASELINE);
    text(app[i].name, x - 15, y + 52, 80, 20);
    
    if (app[i].recommendation === true) {
        imageMode(CENTER);
        image(getImage("space/star"), x + 26, y + 48, 20, 20);
    }
    
    x += 65;
    if (x > 300) {
        x = 77.5;
        y+= 65;
    }
    if (y > 225 && y < 291) { 
        y += 30;  
    }
}
var extras = function() {
    noStroke();
    fill(0);
    for (var i = 0; i < 2; i++) {
        rect(35 + i * 315, 0, 20, height);
    }
    fill(0, 0, 0, 130);
    rect(55, 0, width - 105, 14);
    fill(255, 255, 255);
    var ifStatementText = "";
    if (minute() < 9) {
        ifStatementText = "0";
    }
    var ampm = "AM";
    if (hour() > 11) {
        ampm = "PM";
    }
    text(hour() + ':' + ifStatementText + minute() + ampm, 200, 11);
    var bars = [
        {
            height: 4,
            yPos: 6
        },
        {
            height: 5, 
            yPos: 5
        },
        {
            height: 6,
            yPos: 4
        },
        {
            height: 7,
            yPos: 3
        },
        {
            height: 8,
            yPos: 2
        }
    ];
    for (var i = 0; i < 5; i++) {
        rect(60 + i * 4, bars[i].yPos, 3, bars[i].height);
    }
    text('AT&T', 100, 11); 
    rect(280, 6, 7, 4);                             //locked screen
    noFill();
    stroke(255);
    arc(284, 6, 12, 12, 90, 360);
    triangle(288, 6, 292, 6, 290, 9);
    arc(283.5, 6, 4, 4, 180, 360);
    
    strokeWeight(2);                                //wifi
    for (var Size = 10; Size < 31; Size+=8) {
        arc(131, 15, Size, Size, 240, 300);
    }
    triangle(130, 12, 131.5, 12, 131, 12.5);
    
    rect(316, 3, 15, 8);                        //battery
    rect(331, 5, 2, 4);
    fill(255);
    rect(316, 3, 6, 8);
};
extras();
